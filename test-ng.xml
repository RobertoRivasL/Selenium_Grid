<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
CONFIGURACIÓN TESTNG PARA SELENIUM GRID - VERSIÓN ROBUSTA
- Tests con selectores múltiples y estrategias de fallback
- Timeouts optimizados para estabilidad
- Manejo robusto de errores DOM
-->

<suite name="SeleniumGridRobustSuite"
       parallel="false"
       thread-count="1"
       verbose="2"
       time-out="300000">

    <!-- Listeners para Allure reporting -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Test para Chrome -->
    <test name="ChromeTests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.selenium.grid.test.SeleniumGridTest"/>
            <class name="com.selenium.grid.test.QuickAllureTest"/>
        </classes>
    </test>

    <!-- Test para Firefox -->
    <test name="FirefoxTests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.selenium.grid.test.SeleniumGridTest"/>
            <class name="com.selenium.grid.test.QuickAllureTest"/>
        </classes>
    </test>

</suite>

