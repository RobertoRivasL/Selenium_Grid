<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
CONFIGURACIÓN OPTIMIZADA PARA SELENIUM GRID
- 2 navegadores (Chrome + Firefox)
- Ejecución en paralelo por métodos
- Thread count optimizado para Docker
- Timeout configurado para tests web
- Allure reporting integrado
-->

<suite name="SeleniumGridOptimizedSuite"
       parallel="methods"
       thread-count="4"
       verbose="1"
       data-provider-thread-count="2"
       time-out="300000">

    <!-- Listeners para Allure reporting -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Test principal con ambos navegadores -->
    <test name="CrossBrowserTests" preserve-order="false">
        <classes>
            <class name="QuickTestCorrectedAllureTest"/>
        </classes>
    </test>

</suite>

